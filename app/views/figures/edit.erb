<h1>Edit</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Figure Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

  <%Title.all.each do |title|%>
    <label><%=title.name%>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.name%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
  <% end %>

  <%Landmark.all.each do |landmark|%>
    <label><%=landmark.name%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.name%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
  <% end %>

  <label>Add New Title</label>
  <input type="text" id="new_title" name="title[name]">

  <label>Add New Landmark</label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <input type="submit" value="Edit Figure">
</form>
